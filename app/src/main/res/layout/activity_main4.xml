<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE"
    android:padding="16dp"
    tools:context=".MainActivity4">


    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="Profile"
        android:src="@drawable/profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="306dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/f1button"
        android:layout_width="127dp"
        android:layout_height="42dp"
        android:layout_marginTop="76dp"
        android:backgroundTint="#E19D4C"
        android:text="Category"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/f2button"
        android:layout_width="97dp"
        android:layout_height="42dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="76dp"
        android:backgroundTint="#E19D4C"
        android:text="Buy"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/f3button"
        android:layout_width="127dp"
        android:layout_height="42dp"
        android:layout_marginTop="76dp"
        android:backgroundTint="#E19D4C"
        android:text="Reviews"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/frame1"
        android:layout_width="419dp"
        android:layout_height="718dp"
        android:layout_marginTop="132dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-23dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="412dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="440dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/abhaya_libre"
            android:text="Invest in the beauty of certified, pure gemstones that not only radiate timeless elegance but also ensure authenticity and quality you can trust for a lifetime."
            android:textColor="#000000"
            android:textSize="16sp" />
    </FrameLayout>

    <EditText
        android:id="@+id/search_restaurants"
        android:layout_width="326dp"
        android:layout_height="52dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        android:background="@drawable/s3"
        android:backgroundTint="#ECE9E9"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="8dp"
        android:hint="Search all gemstones"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>